// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Nft {
  id          Int    @id @default(autoincrement())
  name        String @db.Text
  description String @db.Text
  rarity      String @db.Text
  ipfsPath    String @db.Text
  s3Path      String @db.Text
  drop        Drop   @relation(fields: [dropId], references: [id])
  dropId      Int
  users       User[] @relation("UserFavoriteNFT")
}

model Drop {
  id               Int    @id @default(autoincrement())
  lotteryId        Int
  bannerImagePath  String @db.Text
  bannerImageName  String @db.Text
  metadataPath     String @db.Text
  costPerTicket    Int
  prizes           Int    @default(0)
  prizeMetadataCid String @db.Text
  startTime        String @db.Text
  endTime          String @db.Text
  artistName       String @db.Text
  dropName         String @db.Text
  dropDescription  String @db.Text
  Nft              Nft[]
}

model User {
  walletAddress String   @id @db.Char(42)
  userName      String?
  email         String?  @unique
  createdAt     DateTime @default(now())
  role          Role     @default(USER)
  favorites     Nft[]    @relation("UserFavoriteNFT")
}

enum Role {
  USER
  ARTIST
  ADMIN
}
